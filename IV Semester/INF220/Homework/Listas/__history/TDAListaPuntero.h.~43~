 struct NodoP
  {
	int Dato;
    NodoP *Sig;
  };


class TDAListaPuntero
{

	private:
		int Longitud;

	public:
		// Atributos
		NodoP *PtrElementos;

		// Metodos
		TDAListaPuntero();
		bool vacia();
		NodoP *primero();
        NodoP *anterior(NodoP *direccion);


        void insertar(NodoP *posicion,int elemento);
		int longitud();
        int recupera(NodoP *direccion);

};

