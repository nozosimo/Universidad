#pragma package(smart_init)


void TDAMatrizDispersaVector::crear()
{
    df = 0;
    dc = 0;
    repe = 0;
}

void TDAMatrizDispersaVector::poner(int f,int c,int e)
{
    int lug=0;
    int nt = df*dc;
    for(int i=1;i<nt;++i)
    {
         if(vf[i]==f && vc[i]==c)
         {
             lug = i;
             break;
         }
    }
    if(lug>0)
    {
        vd[lug]=e;
    }else
    if(nt<max)
    {

    }
}
