#endif

 struct NodoP
  {
	int Dato;
    NodoP *Sig;
  };


class TDAListaPuntero
{

	private:
		int Longitud;

	public:
		// Atributos
		NodoP *PtrElementos;

		// Metodos
        // Constructor
		TDAListaPuntero();


		bool vacia();

		NodoP *primero();
		NodoP *anterior(NodoP *direccion);
        NodoP *siguiente(NodoP *direccion);
        NodoP *fin();

		int recupera(NodoP *direccion);
		int longitud();

		void insertar(NodoP *posicion,int elemento);
		void modifica(NodoP *direccion, int elemento);
        void mostrar();



};

