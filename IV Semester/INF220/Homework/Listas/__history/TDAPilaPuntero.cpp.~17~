void TDAPilaPuntero::meter(int elemento)
{
	Nodo *aux;
	if(aux!=NULL)
	{
		aux->elemento = elemento;
		aux->sig = Tope;
        Tope = aux;
	}else
	{
        throw("Error...");
    }

}