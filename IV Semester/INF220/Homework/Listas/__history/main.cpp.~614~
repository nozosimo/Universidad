#pragma hdrstop

#include <iostream.h>
#include <conio.h>
#include <fstream>
#include <string>
#include <vector>
#include <cstdlib>

#pragma package(smart_init)

#include "TDAPolinomioVector.h"

using namespace std;

#pragma region Menu
void MostrarOpciones()
{
	cout<<"[1] Crear A\n";
	cout<<"[2] Crear B\n";
	cout<<"[3] Crear C\n";
	cout<<"[4] Poner en A\n";
	cout<<"[5] Poner en B\n";
	cout<<"[6] Complemento AB\n";
	cout<<"[7] Mostrar C\n";
	cout<<"Opcion: ";
}
#pragma end_region

#pragma region MAIN
int main()
{
    TDAPolinomioVector A,B,C;

    A.crear(), B.crear(), C.crear();

    A.poner_termino(3,1);
    A.poner_termino(2,2);
    A.poner_termino(7,3);
    A.expresion();

    B.poner_termino(-3,1);
    B.poner_termino(2,2);
    B.poner_termino(7,3);
    B.expresion();

    C.suma(A,B);
    for(int i=1;i<=C.numero_terminos();++i)
    {
        cout<<C.VC[i]<<" "<<C.VE[i]<<endl;
    }


	getch();

	return 0;

}
#pragma end_region

