//---------------------------------------------------------------------------

#pragma hdrstop

#include "TDAMatrizDispersaVector.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)


void TDAMatrizDispersaVector::crear()
{
    df = 0;
    dc = 0;
    repe = 0;
}

void TDAMatrizDispersaVector::poner(int f,int c,int elemento)
{
    int lug=0;
    for(int i=1;i<df;++i)
    {
         if(vf[i]==f && vc[i]==c)
         {
             lug = i;
             break;
         }
    }
}
